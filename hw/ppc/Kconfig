config PSERIES
    bool
    imply PCI_DEVICES
    imply TEST_DEVICES
    select DIMM
    select PCI
    select SPAPR_VSCSI
    select VFIO if LINUX   # needed by spapr_pci_vfio.c
    select XICS_SPAPR
    select XIVE_SPAPR

config SPAPR_RNG
    bool
    default y
    depends on PSERIES

config POWERNV
    bool
    imply PCI_DEVICES
    imply TEST_DEVICES
    select ISA_IPMI_BT
    select IPMI_LOCAL
    select ISA_BUS
    select MC146818RTC
    select XICS
    select XIVE

config PPC405
    bool

config PPC440
    bool

config PPC4XX
    bool

config SAM460EX
    bool

config PREP
    bool
    imply PCI_DEVICES
    imply TEST_DEVICES
    select CS4231A
    select PREP_PCI
    select I82374
    select I82378
    select LSI_SCSI_PCI
    select M48T59
    select PC87312
    select RS6000_MC

config RS6000_MC
    bool

config MAC_OLDWORLD
    bool

config MAC_NEWWORLD
    bool

config E500
    bool

config VIRTEX
    bool

config XIVE
    bool
    depends on POWERNV || PSERIES

config XIVE_SPAPR
    bool
    default y
    depends on PSERIES
    select XIVE
