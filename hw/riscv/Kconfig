config IBEX
    bool

config SIFIVE
    bool
    select MSI_NONBROKEN

config SIFIVE_E
    bool
    select SIFIVE
    select SIFIVE_CLINT
    select SIFIVE_GPIO
    select SIFIVE_PLIC
    select SIFIVE_UART
    select SIFIVE_E_PRCI
    select UNIMP

config SIFIVE_U
    bool
    select CADENCE
    select SIFIVE
    select SIFIVE_CLINT
    select SIFIVE_GPIO
    select SIFIVE_PDMA
    select SIFIVE_PLIC
    select SIFIVE_UART
    select SIFIVE_U_OTP
    select SIFIVE_U_PRCI
    select UNIMP

config SPIKE
    bool
    select HTIF
    select SIFIVE
    select SIFIVE_CLINT
    select SIFIVE_PLIC

config OPENTITAN
    bool
    select IBEX
    select UNIMP

config RISCV_VIRT
    bool
    imply PCI_DEVICES
    imply TEST_DEVICES
    select PCI
    select SERIAL
    select GOLDFISH_RTC
    select VIRTIO_MMIO
    select PCI_EXPRESS_GENERIC_BRIDGE
    select PFLASH_CFI01
    select SIFIVE
    select SIFIVE_CLINT
    select SIFIVE_PLIC
    select SIFIVE_TEST

config MICROCHIP_PFSOC
    bool
    select SIFIVE
    select SIFIVE_CLINT
    select UNIMP
    select MCHP_PFSOC_MMUART
    select SIFIVE_PDMA
    select SIFIVE_PLIC
    select CADENCE_SDHCI
